{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mclass-user/mclass-user.github.io/refs/heads/main/vices_spending.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": {"type": "line"},
  "width": 500,
  "height": 350,
  "title": {
    "text": "Vice Spending",
    "subtitle": [
      "Spending on Alcohol, Tobacco, and Narcotics",
      "Source: ONS"
    ]
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "Date",
      "axis": {"grid": false}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Spending (£M)",
      "axis": {
        "format": "$,.0f",
        "labelExpr": "'£' + datum.label + 'M'"
      }
    },
    "color": {
      "field": "series",
      "legend": {"title": "Vice Type", "orient": "top"}
    }
  }
}
