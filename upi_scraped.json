{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 450,
  "title": {
    "text": "Growth of India's Unified Payment Interface (UPI)",
    "font": "Arial, sans-serif",
    "fontSize": 20,
    "align": "left",
    "anchor": "start",
    "baseline": "top",
    "color": "#333"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/GeromicG/geromicg.github.io/refs/heads/main/upi_data.csv"
  },
  "config": {
    "axis": {
      "grid": false,
      "titleFont": "Arial, sans-serif",
      "titleFontWeight": "bold"
    }
  },
  "mark": {
    "type": "line",
    "point": true,
    "strokeWidth": 3,
    "halo": {"size": 4},
    "interpolate": "monotone",
    "color": "#00aaff"
  },
  "encoding": {
    "x": {"field": "Year", "type": "temporal", "title": "Year"},
    "y": {
      "field": "USD value (in bn)",
      "type": "quantitative",
      "title": "USD value (in bn)"
    },
    "tooltip": [
      {"field": "Year", "type": "temporal"},
      {"field": "USD value (in bn)", "type": "quantitative"}
    ]
  },
  "layer": [
    {"mark": {"type": "area", "opacity": 0.3, "color": "#002fa7"}},
    {"mark": {"type": "line", "point": true, "color": "#00aaff"}}
  ]
}
